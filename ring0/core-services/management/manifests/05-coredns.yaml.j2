apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: "{{namespace}}"
  labels:
    app.kubernetes.io/instance: "coredns"
    app.kubernetes.io/name: coredns
    ring0/services: "true"
data:
  Corefile: |-
    ring0:53 {
      errors
      reload
      log
      loop
      ready
      prometheus 0.0.0.0:9153
      cache 30

      health {
          lameduck 10s
      }

      netbox {
        token {{coredns_netbox_token}}
        url http://cmdb-netbox.platform-management.svc.cluster.local/api/ipam/ip-addresses
        ttl 60s
      }
    }
