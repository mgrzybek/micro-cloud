{
  "id": "flatcar-installer",
  "name": "Flatcar Linux Installer",
  "boot": {
    "kernel": "/assets/flatcar/current/flatcar_production_pxe.vmlinuz",
    "initrd": [
      "/assets/flatcar/current/flatcar_production_pxe_image.cpio.gz"
    ],
    "args": [
      "initrd=flatcar_production_pxe_image.cpio.gz",
      "flatcar.config.url=http://192.168.2.2:8080/ignition?uuid=${uuid}&mac=${mac:hexhyp}&hostname=${hostname}&domain=${domain}",
      "flatcar.first_boot=yes",
      "flatcar.autologin",
      "console=ttyS0"
    ]
  },
  "ignition_id": "flatcar-installer.ign"
}